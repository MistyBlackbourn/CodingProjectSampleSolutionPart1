BoxLayout:
    orientation: 'vertical'
    Label:
        id: output_label
        text: 'Current Trip Location: ' + app.current_location()
        size: 350, 50
        color: (0, 0, 0, 1)
    BoxLayout:
        size: 350, 150
        orientation: 'horizontal'
        Label:
            text: app.trip_origin()
            color: (0, 0, 0, 1)
        TextInput:
            id: home_to_target
            on_text: app.convert(self.text)
    BoxLayout:
        size: 350, 150
        orientation: 'horizontal'
        Spinner:
            id: country_selection
            color: (1, .5, 0, 1)
            background_color: (0, 0, 0, 1)
            values: app.trip_details()
            on_text: app.conversion(app.trip_origin(), self.text)
        TextInput:
            id: target_to_home
            on_text_validate: app.convert(self.text)
    BoxLayout:
        Label:
            id: date_label
            size: 350, 300
            text: 'Today is: ' + app.todays_date()
            color: (0, 0, 0, 1)
    BoxLayout:
        size: 350, 50
        orientation: 'horizontal'
        Label:
            text: 'Status'
            color: (0, 0, 0, 1)
            foreground_color: (0, 0, 0, 1)
        Button:
            text: 'Update Currency'
            on_press: app.update_currency(app.trip_origin(), country_selection.text)
            color: (1, .5, 0, 1)
            foreground_color: (0, 0, 0, 1)